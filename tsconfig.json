{
    "compilerOptions": {
        "target": "es2018",
        "lib": [
            "dom",
            "esnext"
        ],
        "outDir": "./dist",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "declaration": true
    },
    "include": [
        "./src/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}